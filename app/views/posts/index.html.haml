- throw_content :for_head do
  %link{ :rel => 'alternate', :type => 'application/rss+xml', :title => 'RSS', :href => '/feeds.xml' }

.left_column
  - @posts.each do |post|
    = partial :post, :post => post

.right_column.sidebar
  = link_to "XML Feed", url(:feeds, :format => :xml), :class => "xml_feed"
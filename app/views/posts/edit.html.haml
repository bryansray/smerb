= form_for(:post, :action => url(:post, @post.id)) do 
  .left_column
    = text_control :title, :label => 'Title'
    = text_area_control :text, :label => 'Body', :rows => "10"
  
  .right_column
    .widget
      %h6 Status
      
      .content
        %h6 Current Status
        / = select_control :status, :label => 'Status', :collection => [['published', 'Published'], ['unpublished', 'Unpublished']], :value_method => :first
          
      .content
        %h6 Viewable By
        
        %select
          %option Anyone
          %option Members Only
          %option Only Me

      .content.actions
        = submit "Save"